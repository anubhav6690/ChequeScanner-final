<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <Button android:id="@+id/btn_scan" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Scan Cheque" />
    <Button android:id="@+id/btn_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="View Saved Records" android:layout_marginTop="8dp" />

    <TextView android:id="@+id/tv_result" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Result will appear here" android:layout_marginTop="12dp" />
</LinearLayout>
